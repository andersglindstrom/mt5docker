{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": false,
  "dockerfile": {
    "fileMatch": [
      "Dockerfile"
    ]
  },
  "docker-compose": {
    "fileMatch": [
      "compose.yaml"
    ]
  },
  "pip_requirements": {
    "fileMatch": [
      "requirements.txt"
    ],
  "packageRules": [
      {
        "matchPackageNames": ["MetaTrader5", "pymt5linux"],
        "enabled": true
      },
      {
        "matchManagers": ["pip_requirements"],
        "enabled": false
      }
    ]
  },
  "commitMessagePrefix": "chore(deps): "
}